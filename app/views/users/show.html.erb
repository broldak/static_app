<% provide(:title, @user.name) %>

<div class = "row">
	<aside class = "span4">
		<%= gravatar_for @user %>
		<h3><%= @user.name %></h3>
	</aside>
	<div class = "span8">
		<% if @user.microposts.any? %>
			<h4>Microposts (<%= @user.microposts.count %>)</h4>
			<ol class = "microposts">
				<%= render @microposts %>
			</ol>
			<%= will_paginate @microposts %>
		<% end %>
	</div>
</div>